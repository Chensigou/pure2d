<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Group SYSTEM "../../pure2d-ui.dtd" >
<Group
    height="600"
    width="600" >

    <Sprite9
        blendMode="premultiplied_alpha"
        height="100%"
        patches="20,20,20,20"
        source="@drawable/panel_collection_reward"
        touchable="true"
        width="100%" />

    <Sprite
        centerX="0"
        source="cache://global/global_hd/tag_sale_detail.png"
        top="7%" />

    <VGroup
        childrenGap="2%"
        height="wrap_content"
        left="5%"
        top="10%"
        width="wrap_content" >
        <Sprite source="@drawable/cc_128" />
        <Sprite source="@drawable/mw_128" />
        <Sprite source="@drawable/ka_128" />
    </VGroup>

    <VList
        bottom="25%"
        childrenGap="2%"
        clippingEnabled="true"
        right="5%"
        swipeEnabled="true"
        top="10%"
        width="wrap_content" >
        <Sprite source="@drawable/cc_128" />
        <Sprite source="@drawable/mw_128" />
        <Sprite source="@drawable/ka_128" />
    </VList>

    <HGroup
        align="center"
        bottom="5%"
        centerX="0"
        childrenGap="20"
        height="wrap_content"
        width="100%" >
        <Button
            patches="20,20,0,0"
            source="@drawable/btn_up"
            width="30%" >
            <Text
                centerX="0"
                centerY="0"
                font="font2"
                text="@string/cancel" />
        </Button>
        <Button
            patches="20,20,0,0"
            source="@drawable/btn_up"
            width="30%" >
            <Text
                centerX="0"
                centerY="0"
                font="font2"
                text="@string/okay" />
        </Button>
    </HGroup>

    <VWheel>
    </VWheel>

</Group>