{
	"version": 1,
	"emitters": [
		{
			"name": "my_fire",
			"width": 50,
			"height": 50,
			"lifespan": 6000,
			"particles": [
				{
					"sprites": ["smoke"],
					"duration": 5000,
					"start_delay": 500,
					"animator": "smoke_ani",
					"blend_mode": "screen_alpha",
					"layer": 1
				},
				{
					"sprites": ["fire", "fire", "fire", "smoke"],
					"duration": 5000,
					"animator": "fire_ani",
					"blend_mode": "add"
				}
			],
			"animator": "left_right"
		}
	],
	
	"animators": [
		{
			"name": "left_right",
			"type": "translate",
			"dx": [200],
			"duration": [2000],
			"interpolator": "accelerate_decelerate",
			"loop_mode": "reverse"
		},
		{
			"name":"smoke_ani",
			"type": "parallel",
			"animators": [
				{"type": "translate", "dx": [-100, 100], "dy": [300, 500], "duration": [500, 1000], "interpolator": "accelerate_decelerate"},
				{"type": "rotate", "angle": [0, 360], "duration": [1000]},
				{"type": "alpha", "from": [1], "to": [0], "duration": [700]},
				{"type": "scale", "x_from": [1.5], "y_from": [1.5], "x_to": [0.5], "y_to": [0.5], "duration": [700]}
			]
		},
		{
			"name":"fire_ani",
			"type": "parallel",
			"animators": [
				{"type": "translate", "dx": [-20, 20], "dy": [100, 300], "duration": [500, 1000], "interpolator": "accelerate_decelerate"},
				{"type": "scale", "x_from": [1], "y_from": [1], "x_to": [0.125], "y_to": [0.5], "duration": [1000]}
			]
		}
	]
}
