{
	"version": 1,
	"emitters": [
		{
			"name": "awesome_fire",
			"width": 1,
			"height": 1,
			"lifespan": 5000,
			"particles": [
				{
					"sprite": "smoke",
					"start_delay": 0,
					"step_delay": 100,
					"num_per_step": 2,
					"animator": "move_rotate"
				},
				{
					"sprite": "fire",
					"start_delay": 1000,
					"step_delay": 100,
					"num_per_step": 10,
					"animator": "move_rotate"
				}
			]
		}
	],
	
	"sprites": [
		{
			"name": "smoke",
			"file": "smoke.png"
		}
	],
	
	"animators": [
		{
			"name":"move_rotate",
			"type": "parallel",
			"animators": [
				{"type": "move", "dx": [-10, 10], "dy": [10, 20], "duration": [500, 1000], "interpolator": "decelerate"},
				{"type": "rotate", "delta": [-360, 360], "duration": [500, 1000]}
			]
		}
	]
}
